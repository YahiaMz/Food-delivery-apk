<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/item_item_order"
    android:paddingVertical="8dp"
    android:paddingHorizontal="6dp">

    <ImageView
        android:id="@+id/food_Order_image"
        android:layout_width="50dp"
        android:padding="2dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/burger" />

    <TextView
        android:id="@+id/food_order_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_regular"
        android:text="burger one"
        android:textColor="@color/text_color"
        android:textSize="12dp"
        android:layout_marginHorizontal="6dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/food_Order_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/food_Order_image"
        app:layout_constraintTop_toBottomOf="@+id/food_order_qantity" />

    <TextView
        android:id="@+id/food_order_qantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:fontFamily="@font/sf_regular"
        android:text="x3"
        android:textColor="@color/black"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/food_order_name"
        app:layout_constraintStart_toEndOf="@+id/food_Order_image"
        app:layout_constraintTop_toTopOf="@+id/food_Order_image"
        app:layout_constraintVertical_chainStyle="spread" />
</androidx.constraintlayout.widget.ConstraintLayout>