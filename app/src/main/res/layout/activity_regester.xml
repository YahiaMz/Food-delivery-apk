<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:layout_height="match_parent"
    tools:context=".Regeiter_Activity">


    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/mBtn_Register"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.20">


        <EditText
            android:id="@+id/user_name_for_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@drawable/custom_edit_text001"
            android:drawableStart="@drawable/user_name_bg_selector"
            android:drawablePadding="8dp"
            android:fontFamily="@font/sf_regular"
            android:hint="Enter Your Name"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <EditText
            android:singleLine="true"

            android:id="@+id/email_FoR_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_name_for_register"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/custom_edit_text001"
            android:drawableStart="@drawable/email_selector"
            android:drawablePadding="8dp"
            android:fontFamily="@font/sf_regular"
            android:hint="Enter Your Email"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/password_for_register"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/email_FoR_register"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="16dp"
            android:background="@drawable/custom_edit_text001"
            android:drawableStart="@drawable/password_selector"
            android:drawableEnd="@drawable/ic_visibility_on"
            android:drawablePadding="8dp"
            android:fontFamily="@font/sf_regular"
            android:hint="Enter Your password"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/confirm_password_for_register"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/password_for_register"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="16dp"
            android:background="@drawable/custom_edit_text001"
            android:drawableStart="@drawable/confirm_password_icon_selector"
            android:inputType="textWebPassword"
            android:drawablePadding="8dp"
            android:fontFamily="@font/sf_regular"
            android:hint="Confirm your password"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="16dp" />


    </RelativeLayout>

    <Button
        android:id="@+id/mBtn_Register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"

        android:layout_marginBottom="16dp"
        android:layout_gravity="bottom"
        android:background="@drawable/add_to_cart_bg"
        android:text="Register"
        android:layout_marginHorizontal="24dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="17sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>